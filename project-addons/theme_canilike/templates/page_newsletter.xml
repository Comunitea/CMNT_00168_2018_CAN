<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="can_newsletter_content_template" name="Newsletter Content Canilike Theme Template" inherit_id="theme_canilike.can_newsletter_template">
        <xpath expr="//div[@id='wrap']" position="inside">
            <div class="row mt32 mb32">
                <div class="col-md-12">
                    <h1>Newsletter</h1>
                    <h2>Keep updated</h2>
                    <h3>We will send you all that information that is advantageous for you</h3>
                    <p>Remember that Can I Like will be respectful of the law and its rights</p>

                    <section class="mt32">
                        <h4 data-oe-model="ir.ui.view" data-oe-id="6237" data-oe-field="arch" data-oe-xpath="/data/xpath[2]/section/h4[1]">Keep updated:</h4>
                        <div class="input-group js_follow" data-id="2" data-object="blog.blog" data-follow="off">
                            <span class="input-group-btn">
                                <button href="#" data-oe-model="ir.ui.view" data-oe-id="3082" data-oe-field="arch" data-oe-xpath="/t[1]/div[1]/span[1]/button[1]" class="btn btn-default js_unfollow_btn hidden">Unsubscribe</button>
                                <button href="#" data-oe-model="ir.ui.view" data-oe-id="3082" data-oe-field="arch" data-oe-xpath="/t[1]/div[1]/span[1]/button[2]" class="btn btn-primary js_follow_btn">Subscribe</button>
                            </span>
                        </div>
                        <p class="text-muted mb0 mt16" data-oe-model="ir.ui.view" data-oe-id="6237" data-oe-field="arch" data-oe-xpath="/data/xpath[2]/section/p[1]">
                            Participate in our social flow.
                        </p>
                        <h2 class="mt4">
                            <a data-oe-model="ir.ui.view" data-oe-id="6237" data-oe-field="arch" data-oe-xpath="/data/xpath[2]/section/h2[1]/a[7]" href="/blog/2/feed"><i class="fa fa-rss-square"/></a>
                        </h2>
                    </section>

                    <section class="mt32 mb32">
                        <h1>Social networks</h1>
                        <h2>LinkedIn</h2>
                        <h3>Follow us and you can know us better</h3>
                        <p>Remember that Can I Like will be respectful of the law and its rights</p>
                        <p class="mt16"><a href="https://es.linkedin.com/company/canilike" target="_blank" alt="LinkedIn Link" title="LinkedIn" rel="nofollow">LinkedIn</a></p>
                    </section>
                </div>
            </div>
        </xpath>
    </template>

</odoo>