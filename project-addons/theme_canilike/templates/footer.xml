<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="can_website_footer_custom_template" name="Footer Custom Canilike Template" inherit_id="website_multi_theme.auto_view_can_website_footer_default">
        <!-- Put footer on checkout again -->
        <xpath expr="//div[@id='footer']" position="attributes">
            <attribute name="t-if"/>
        </xpath>

        <xpath expr="//div[@id='footer']//div[hasclass('row')]" position="replace">
            <div>
                <h4 t-esc="website.name"/>
                <ul>
                    <li><a href="/aboutus" alt="About Us Link" title="About Us" rel="nofollow" target="_blank">About Us</a></li>
                    <li><a href="/contactus" alt="Contact Us Link" title="Contact Us" rel="nofollow" target="_blank">Contact Us</a></li>
                </ul>
            </div>
            <div>
                <h4>Social Media</h4>
                <ul>
                    <li><a t-att-href="website.social_facebook" t-if="website.social_facebook" rel="nofollow" target="_blank">Facebook</a></li>
                    <li><a t-att-href="website.social_twitter" t-if="website.social_twitter" rel="nofollow" target="_blank">Twitter</a></li>
                    <li><a t-att-href="website.social_youtube" t-if="website.social_youtube" rel="nofollow" target="_blank">Youtube</a></li>
                    <li><a t-att-href="website.social_instagram" t-if="website.social_instagram" rel="nofollow" target="_blank">Instagram</a></li>
                </ul>
            </div>
            <div>
                <h4>Legal</h4>
                <ul>
                    <li><a href="/legal/terms-of-use" alt="Terms of Use Link" title="Terms of Use" rel="nofollow" target="_blank">Terms of Use</a></li>
                    <li><a href="/legal/privacy-policy" alt="Privacy Policy Link" title="Privacy Policy" rel="nofollow" target="_blank">Privacy Policy</a></li>
                    <li><a href="/legal/advice" alt="Legal Advise Link" title="Legal Advise" rel="nofollow" target="_blank">Legal Advise</a></li>
                </ul>
            </div>
        </xpath>
    </template>

    <!-- Legal footer links replacement -->
    <template id="can_website_layout_footer_copyright" inherit_id="website.layout_footer_copyright" name="Footer Copyright Legal Link Replace">
        <xpath expr="//div[hasclass('pull-left', 'text-muted')]" position="replace">
            <p class="pull-left text-muted">
                Copyright &amp;copy; <span t-field="res_company.name">Company name</span>
            </p>
        </xpath>
    </template>

</odoo>