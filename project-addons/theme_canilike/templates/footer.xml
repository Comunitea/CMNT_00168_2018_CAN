<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="can_website_footer_custom_template" name="Footer Canilike Theme Template" inherit_id="website_multi_theme.auto_view_can_website_footer_custom">
        <!--        <xpath expr="//div[@id='footer']" position="replace">-->
        <xpath expr="//div[@id='footer']//div[hasclass('row')]" position="replace">
            <div class="row">
                <div class="col-md-4">
                    <h4 t-esc="website.name"/>
                    <ul class="list-unstyled">
                        <li><a href="/aboutus">About us</a></li>
                        <li><a href="/contactus">Contactus</a></li>
                        <li><a href="/newsletter">Newsletter</a></li>
                    </ul>
                </div>
                <div class="col-md-4">

                    <h4>Column</h4>
                    <ul>
                        <li><a href="/">Line 1</a></li>
                        <li><a href="/">Line 2</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h4>Column</h4>
                    <p>We are a team of passionate people whose goal is to improve everyone's life through disruptive products. We build great products to solve your business problems.</p>

                    <h4>Follow us</h4>
                    <ul>
                        <!--<li><a rel="nofollow" target="_blank" href="https://www.facebook.com/">Facebook</a></li>-->
                        <!--<li><a rel="nofollow" target="_blank" href="https://twitter.com/">Twitter</a></li>-->
                        <!--<li><a rel="nofollow" target="_blank" href="https://instagram.com/">Instagram</a></li>-->
                        <li><a t-att-href="website.social_facebook" t-if="website.social_facebook" rel="nofollow" target="_blank"><i class="fa fa-facebook-square"/></a></li>
                        <li><a t-att-href="website.social_twitter" t-if="website.social_twitter" rel="nofollow" target="_blank"><i class="fa fa-twitter"/></a></li>
                        <li><a t-att-href="website.social_youtube" t-if="website.social_youtube" rel="nofollow" target="_blank"><i class="fa fa-youtube-play"/></a></li>
                        <li><a t-att-href="website.social_instagram" t-if="website.social_instagram" rel="nofollow" target="_blank"><i class="fa fa-instagram"/></a></li>
                    </ul>

                    <ul>
                        <li><a href="/legal/terms-of-use">Términos de Uso</a></li>
                        <li><a href="/legal/privacy-policy">Política de Privacidad</a></li>
                        <li><a href="/legal/advice">Aviso Legal</a></li>
                    </ul>
                </div>
                <div class="col-md-12">
                    <div class="pull-left text-muted" itemscope="itemscope" itemtype="http://schema.org/Organization">
                        <p>Copyright &amp;copy; <span t-esc="time.strftime('%Y')"/> <span t-field="res_company.name" itemprop="name">Company name</span> eShop</p>
                    </div>
                    <ul>
                        <!--<li>111-222-333</li>-->
                        <li><i class="fa fa-phone"/><a t-field="website.phone" t-att-href="'tel:%s' %website.phone"/></li>
                        <!--<li>info@canilike.com</li>-->
                        <li><i class="fa fa-envelope"/><a t-field="website.email" t-att-href="'mailto:%s' %website.email"/></li>
                    </ul>
                </div>
            </div>
        </xpath>
    </template>

</odoo>