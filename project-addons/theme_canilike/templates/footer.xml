    <template id="can_layout_footer_copyright" name="Footer Copyright Canilike Template" inherit_id="website.layout_footer_copyright">
        <xpath expr="//footer//div[hasclass('pull-left', 'text-muted')]" position="replace">
                <div class="pull-left text-muted" itemscope="itemscope" itemtype="http://schema.org/Organization">
                    <span>Copyright &amp;copy; <span t-esc="time.strftime('%Y')"/> <span t-field="res_company.name" itemprop="name">Company Name</span> eShop </span>
                </div>
        </xpath>
