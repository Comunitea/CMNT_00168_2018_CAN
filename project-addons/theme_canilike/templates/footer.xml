<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="can_website_footer_custom_template" name="Footer Custom Canilike Template" inherit_id="website_multi_theme.auto_view_can_website_footer_custom">
        <xpath expr="//div[@id='footer']//div[hasclass('row')]" position="replace">
            <div class="row">

                <div class="col-md-3">
                    <h4 t-esc="website.name"/>
                    <ul class="list-unstyled">
                        <li><a href="/aboutus" alt="About Us Link" title="About Us" rel="nofollow" target="_blank">About Us</a></li>
                        <li><a href="/contactus" alt="Contact Us Link" title="Contact Us" rel="nofollow" target="_blank">Contact Us</a></li>
                        <li><a href="/page/newsletter" alt="Follow Us Link" title="Follow Us" rel="nofollow" target="_blank">Follow Us</a></li>
                        <li><a href="/blog" alt="Blog Link" title="Blog" rel="nofollow" target="_blank">Blog</a></li>
                    </ul>
                </div>

                <div class="col-md-3">
                    <h4>Improvement</h4>
                    <p>We are a team of passionate people whose goal is to improve everyone's life through disruptive products. We build great products to solve your business problems.</p>
                </div>

                <div class="col-md-3">
                    <h4>Social Media</h4>
                    <h2 class="mt4">
                        <span><a t-att-href="website.social_facebook" t-if="website.social_facebook" rel="nofollow" target="_blank"><i class="fa fa-facebook-square"/></a></span>
                        <span><a t-att-href="website.social_twitter" t-if="website.social_twitter" rel="nofollow" target="_blank"><i class="fa fa-twitter"/></a></span>
                        <span><a t-att-href="website.social_youtube" t-if="website.social_youtube" rel="nofollow" target="_blank"><i class="fa fa-youtube-play"/></a></span>
                        <span><a t-att-href="website.social_instagram" t-if="website.social_instagram" rel="nofollow" target="_blank"><i class="fa fa-instagram"/></a></span>
                    </h2>
                </div>
                <div class="col-md-3">
                    <h4>Legal</h4>
                        <p><a href="/legal/terms-of-use" alt="Terms of Use Link" title="Terms of Use" rel="nofollow" target="_blank">Terms of Use</a></p>
                        <p><a href="/legal/privacy-policy" alt="Privacy Policy Link" title="Privacy Policy" rel="nofollow" target="_blank">Privacy Policy</a></p>
                        <p><a href="/legal/advice" alt="egal Advise Link" title="egal Advise" rel="nofollow" target="_blank">Legal Advise</a></p>
                </div>
            </div>
        </xpath>

