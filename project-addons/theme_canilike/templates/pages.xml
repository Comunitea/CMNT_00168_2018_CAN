    <!-- Delete default and create the new Aboutus page-->
    <delete id="website.aboutus_page" model="website.page"/>
    <record id="theme_can_about_us" model="website.page">
        <field name="name">About us</field>
        <field name="website_published">True</field>
        <field name="url">/aboutus</field>
        <field name="view_id" ref="theme_can_about_us_template"/>
    </record>
    <record id="theme_can_about_us_link" model="website.menu">
        <field name="name">About us</field>
        <field name="url">/aboutus</field>
        <field name="page_id" ref="theme_can_about_us"/>
        <field name="sequence" type="int">99</field>
        <field name="parent_id" ref="website.main_menu" />
        <field name="website_id" ref="website.default_website"/>
    </record>

