<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Legal pages -->
        <record id="website_legal_page.advise_page" model="website.page">
            <field name="name">Legal Advise</field>
            <field name="website_published">True</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/legal/advice</field>
            <field name="view_id"  ref="theme_canilike.advise"/>
        </record>

        <record id="website_legal_page.privacy_page" model="website.page">
            <field name="name">Privacy Policy</field>
            <field name="website_published">True</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/legal/privacy-policy</field>
            <field name="view_id"  ref="theme_canilike.privacy"/>
        </record>

        <record id="website_legal_page.terms_page" model="website.page">
            <field name="name">Terms of Use</field>
            <field name="website_published">True</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/legal/terms-of-use</field>
            <field name="view_id"  ref="theme_canilike.terms"/>
        </record>

        <!-- Contact Us -->
        <record id="website.contactus_page" model="website.page">
            <field name="name">Contact Us</field>
            <field name="website_published">True</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/contactus</field>
            <field name="view_id" ref="website_crm_contactus_form"/>
        </record>

        <record id="website.menu_contactus" model="website.menu">
            <field name="name">Contact us</field>
            <field name="url">/contactus</field>
            <field name="sequence" type="int">50</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="website_id" ref="website.default_website"/>
            <field name="user_logged">False</field>
            <field name="user_not_logged">False</field>
        </record>

        <!--Payment and shipping-->
        <record id="payment_and_shipping_page" model="website.page">
            <field name="name">Payment and shipping</field>
            <field name="website_published">True</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/payment-and-shipping</field>
            <field name="view_id"  ref="theme_canilike.payment_and_shipping"/>
        </record>

        <!--About Us-->
        <record id="aboutus_page" model="website.page">
            <field name="name">About us</field>
            <field name="website_published">True</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/aboutus</field>
            <field name="view_id"  ref="theme_canilike.about_us"/>
        </record>

        <record id="menu_aboutus" model="website.menu">
            <field name="name">About Us</field>
            <field name="url">/aboutus</field>
<!--            <field name="page_id" ref="theme_canilike.aboutus_page"/>-->
            <field name="sequence" type="int">40</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="website_id" ref="website.default_website"/>
            <field name="user_logged">True</field>
            <field name="user_not_logged">True</field>
        </record>

    </data>
</odoo>