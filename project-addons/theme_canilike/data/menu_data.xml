<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">

        <!-- CanILike Website -->
        <record id="website.default_website" model="website">
            <field name="name">Can I Like eShop</field>
            <field name="domain">localhost</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="user_id" ref="base.public_user"/>
            <field name="favicon" type="base64" file="theme_canilike/static/demo/favicon.png"/>
        </record>

        <!-- CanILike Main menu -->
        <record id="website.main_menu" model="website.menu">
            <field name="name">Top Menu</field>
            <field name="website_id" ref="website.default_website"/>
        </record>

        <!-- CanILike Home Menu -->
        <record id="canilike_menu_homepage" model="website.menu">
            <field name="name">Home</field>
            <field name="url">/</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">10</field>
            <field name="website_id" ref="website.default_website"/>
        </record>

        <!-- split between ir_ui_view & website_page record to keep external_id on ir_ui_view -->
        <record id="canilike_homepage" model="ir.ui.view">
            <field name="name">Home CanILike</field>
            <field name="type">qweb</field>
            <field name="key">website.homepage</field>
            <field name="arch" type="xml">
                <t name="Home" priority="29" t-name="canilike_homepage">
                    <t t-set="pageName" t-value="'Home CanILike'"/>
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="container">
                                <t t-call="theme_canilike.theme_can_homepage_content"/>
                                <div class="oe_structure oe_empty"/>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="canilike_homepage_page" model="website.page">
            <field name="website_published">True</field>
            <field name="url">/</field>
            <field name="view_id" ref="canilike_homepage" />
        </record>

        <!-- Set CanILike homepage as home page-->
        <record id="website.default_website" model="website">
            <field name="homepage_id" ref="canilike_homepage_page" />
        </record>

        <!-- Set website_id for shop page -->
        <record id="website_sale.menu_shop" model="website.menu">
            <field name="name">Shop</field>
            <field name="url">/shop</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">20</field>
            <field name="website_id" ref="website.default_website"/>
        </record>

        <!-- Delete the default homepage -->
        <delete id="website.menu_homepage" model="website.menu"/>
        <delete id="website.homepage_page" model="website.page"/>
        <!--<delete id="website.homepage" model="ir.ui.view"/>-->

        <!-- Delete "shop by brand" menu -->
        <delete id="website_sale_product_brand.menu_website_sale_brand" model="website.menu"/>

        <!-- Add menus to web back-end part -->
        <menuitem name="Menus"
            id="canilike_menus_list"
            action="website.action_website_menu"
            parent="website.menu_website_global_configuration"
            sequence="25"
            groups="base.group_no_one"/>
        <record id="action_website_list" model="ir.actions.act_window">
            <field name="name">Website list</field>
            <field name="res_model">website</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="website.view_website_tree"/>
            <field name="target">current</field>
        </record>
        <menuitem name="Website"
            id="default_website_list"
            action="action_website_list"
            parent="website.menu_website_global_configuration"
            sequence="30"
            groups="base.group_no_one"/>

    </data>
</odoo>
