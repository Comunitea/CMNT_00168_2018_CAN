            <field name="name">Home</field>
            <field name="type">qweb</field>
            <field name="key">website.homepage</field>
            <field name="arch" type="xml">
                <t name="Home" priority="29" t-name="can_homepage">
                    <t t-call="theme_canilike.can_home_content_template"/>
                </t>
            </field>
        </record>

        <record id="can_home_page" model="website.page">
            <field name="name">Home</field>
            <field name="website_published">True</field>
            <field name="url">/</field>
            <field name="view_id" ref="theme_canilike.can_home_view"/>
            <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_can.canilike_website')])]"/>
        </record>

