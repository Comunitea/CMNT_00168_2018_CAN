<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Legal pages -->
        <record id="website_legal_page.advise_page" model="website.page">
            <field name="name">Legal Advise</field>
            <field name="website_published">True</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/legal/advice</field>
            <field name="view_id" ref="website_legal_page.advice"/>
        </record>

        <record id="website_legal_page.privacy_page" model="website.page">
            <field name="name">Privacy Policy</field>
            <field name="website_published">True</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/legal/privacy-policy</field>
            <field name="view_id" ref="website_legal_page.privacy-policy"/>
        </record>

        <record id="website_legal_page.terms_page" model="website.page">
            <field name="name">Terms of Use</field>
            <field name="website_published">True</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/legal/terms-of-use</field>
            <field name="view_id" ref="website_legal_page.terms-of-use"/>
        </record>

        <!-- Contact Us -->
        <template id="can_contactus_view" name="Contact Us Canilike View" inherit_id="website_multi_theme.auto_view_can_website_crm_contactus_form">
            <!-- Google recaptcha and Accept Legal contact form -->
            <xpath expr="//div[hasclass('form-field')][last()]" position="after">
                <t t-call="website_base_multi_can.can_website_crm_contactus_form_recaptcha_snippet"/>
                <t t-call="website_base_multi_can.can_website_crm_contactus_form_legal_snippet"/>
            </xpath>
        </template>
        <record id="website.contactus_page" model="website.page">
            <field name="name">Contact Us</field>
            <field name="website_published">False</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="url">/contactus</field>
            <field name="view_id" ref="theme_canilike.can_contactus_view"/>
        </record>

        <!--About Us-->
        <template id="can_aboutus_view" name="About Us Canilike View" inherit_id="website.aboutus">
            <xpath expr="//div[@id='wrap']" position="replace">
                <t t-call="theme_canilike.can_about_us_content"/>
            </xpath>
        </template>
        <record id="website.aboutus_page" model="website.page">
            <field name="name">About us</field>
            <field name="website_ids" eval="[(6, 0, [ref('website.default_website')])]"/>
            <field name="website_published">False</field>
            <field name="url">/aboutus</field>
            <field name="view_id" ref="theme_canilike.can_aboutus_view"/>
        </record>

        <template id="website_multi_theme.auto_view_can_website_layout_logo_show" inherit_id="website_multi_theme.auto_layout_website_can" name="Show logo"/>

    </data>
</odoo>